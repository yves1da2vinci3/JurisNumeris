   <link href="/css/services.css" rel="stylesheet" />
  
</head>
<body>
<%- include('./layout/navbar.ejs'); -%>
  <!--/header-->
  <h1 class="Container__title">Nos formations</h1>
  <p class="Container__subtitle">Nos cours portent sur tout les domaines des TICs</p>
  <div class="Formations__container">
    <% for (let i=0; i < Formations.length ; i++) { %>
      <div class="formation__item">
        <img class="formation__img" src= <%= Formations[i].imageUrl %> alt=""/>
          <p class="formation__item__name">
            <%= Formations[i].name %>
            </p>
          <p class="formation__item__description">
            <%= Formations[i].Description %>
          </p>
          <a  class="formation__item__link" href=/formation/<%=Formations[i]._id %>>En savoir plus</a>
      </div>
      <% } %>
  </div>
  
 
    <%- include('./layout/footer.ejs'); -%>
    <script src="/javascripts/navbar.js" ></script>
</body>
</html>
